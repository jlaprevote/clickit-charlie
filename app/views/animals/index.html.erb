<p id="notice"><%= notice %></p>

<h2 style="font-family: 'Trebuchet MS'; text-align: center;">Click the</h2>
<h1 style="font-family: 'Trebuchet MS'; text-align: center; font-size: 72px">Animals</h1>
<h2 style="font-family: 'Trebuchet MS'; text-align: center;">Charlie!</h2>

<div id="masonry-container" class="transitions-enabled infinite-scroll clearfix">
  <div class="grid">
    <div class="grid-sizer"></div>
      <% @animals.each do |animal| %>
            <div class="grid-item" style="width: 600px; height: 445px;">
                <%= image_tag "#{animal.name.downcase}.jpeg", class: "item", id: "#{animal.name.downcase}", data: { animal: "#{animal.name.downcase}" } %>
                <%= audio_tag("#{animal.name.downcase}.wav", type: 'wav/audio', autoplay: false, class: animal.name.downcase) %>
              <h2><%= animal.name.titleize %></h2>
            </div>
      <% end %>
  </div>
</div>