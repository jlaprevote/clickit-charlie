<p id="notice"><%= notice %></p>

<h1>Animals</h1>

<% @animals.each do |animal| %>
  <div class="col-md-12 col-xs-12">
    <div class="col-md-offset-3 col-md-6 col-xs-6">
      <div class="panel panel-primary">
        <div class="panel-body">
          <%= image_tag "#{animal.name.downcase}.jpg", style: "width: 600px", class: "img-responsive center-block", id: "#{animal.name.downcase}" %>
        </div>
        <div class="panel-footer"><%= animal.name %></div>
      </div>
    </div>
  </div>
    <%= audio_tag("#{animal.name.downcase}.wav", type: 'wav/audio', autoplay: false, class: animal.name.downcase) %>

<% end %>


