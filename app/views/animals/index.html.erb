<p id="notice"><%= notice %></p>

<div class="body">
  <h2 style="font-family: 'Trebuchet MS'; text-align: center;">Click the</h2>
  <h1 style="font-family: 'Trebuchet MS'; text-align: center; font-size: 72px">ANIMALS</h1>
  <h2 style="font-family: 'Trebuchet MS'; text-align: center;">Charlie!</h2>

  <div id="masonry-container" class="transitions-enabled infinite-scroll clearfix">
    <div class="grid-animal">
      <% @animals.each do |animal| %>
          <div class="animal-item">
            <%= image_tag "#{animal.name.downcase}.jpeg", class: "item", id: "#{animal.name.downcase}", data: { animal: "#{animal.name.downcase}" }, size: '320x217' %>
            <%= audio_tag("animals/#{animal.name.downcase}.wav", type: 'wav/audio', autoplay: false, class: animal.name.downcase) %>
            <h1><%= animal.name.upcase %></h1>
          </div>
      <% end %>
    </div>
  </div>
</div>
