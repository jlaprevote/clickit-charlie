<p id="notice"><%= notice %></p>

<div class="body">
  <h1 class="title">Click the <span style="font-size: 72px">LETTERS</span> Charlie!</h1>

  <div id="masonry-container" class="transitions-enabled infinite-scroll clearfix">
    <div class="grid-letter">
      <% @letters.each do |letter| %>
          <div class="letter-item">
            <div class="item" id="<%= letter.name %>"><span id="letter"><%= letter.name %></span></div>
            <%= audio_tag("letters/#{letter.name }.mp3", type: 'mp3/audio', autoplay: false, class: letter.name.downcase) %>
          </div>
      <% end %>
    </div>
  </div>
</div>